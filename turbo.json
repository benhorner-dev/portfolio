{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"SENTRY_CLIENT_SECRET",
				"SLACK_STAGING_WEBHOOK_URL",
				"SLACK_PRODUCTION_WEBHOOK_URL",
				"NEXT_PUBLIC_SENTRY_DSN",
				"SENTRY_AUTH_TOKEN",
				"VERCEL_ENV",
				"NEXT_RUNTIME",
				"SENTRY_DEBUG",
				"LOG_LEVEL",
				"NODE_ENV"
			]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"dev:fe": {
			"persistent": true,
			"cache": false
		},
		"test": {},
		"test:unit": {},
		"test:integration": {},
		"test:e2e": {},
		"lint": {},
		"format": {}
	}
}
