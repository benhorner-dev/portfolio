{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"SENTRY_CLIENT_SECRET",
				"SLACK_WEBHOOK_URL",
				"NEXT_PUBLIC_SENTRY_DSN",
				"SENTRY_AUTH_TOKEN",
				"VERCEL_ENV",
				"NEXT_RUNTIME",
				"SENTRY_DEBUG",
				"LOG_LEVEL",
				"NODE_ENV",
				"NEXT_PUBLIC_POSTHOG_KEY",
				"NEXT_PUBLIC_POSTHOG_PROJECT_ID",
				"NEXT_PUBLIC_POSTHOG_HOST",
				"CONTENT_CONFIG_PATH",
				"SLACK_SIGNING_SECRET",
				"STATSIG_SERVER_API_KEY",
				"AUTH0_SECRET",
				"APP_BASE_URL",
				"AUTH0_CLIENT_ID",
				"AUTH0_CLIENT_SECRET",
				"AUTH0_SCOPE",
				"AUTH0_DOMAIN"
			]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"dev:fe": {
			"persistent": true,
			"cache": false,
			"env": [
				"CONTENT_CONFIG_PATH",
				"STATSIG_SERVER_API_KEY",
				"AUTH0_SECRET",
				"APP_BASE_URL",
				"AUTH0_CLIENT_ID",
				"AUTH0_CLIENT_SECRET",
				"AUTH0_SCOPE",
				"AUTH0_DOMAIN"
			]
		},
		"test": {
			"env": [
				"DATABASE_URL",
				"AUTH0_SECRET",
				"APP_BASE_URL",
				"AUTH0_CLIENT_ID",
				"AUTH0_CLIENT_SECRET",
				"AUTH0_SCOPE",
				"AUTH0_DOMAIN"
			]
		},
		"test:unit": {},
		"test:integration": { "env": ["DATABASE_URL"] },
		"test:e2e": {
			"env": [
				"TEST_EMAIL",
				"TEST_PASSWORD",
				"AUTH0_SECRET",
				"APP_BASE_URL",
				"AUTH0_CLIENT_ID",
				"AUTH0_CLIENT_SECRET",
				"AUTH0_SCOPE",
				"AUTH0_DOMAIN",
				"DATABASE_URL"
			]
		},
		"lint": {},
		"format": {},
		"migrate": {
			"env": ["DATABASE_URL"]
		}
	}
}
