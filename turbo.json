{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"SENTRY_CLIENT_SECRET",
				"SLACK_WEBHOOK_URL",
				"NEXT_PUBLIC_SENTRY_DSN",
				"SENTRY_AUTH_TOKEN",
				"VERCEL_ENV",
				"NEXT_RUNTIME",
				"SENTRY_DEBUG",
				"LOG_LEVEL",
				"NODE_ENV",
				"NEXT_PUBLIC_POSTHOG_KEY",
				"NEXT_PUBLIC_POSTHOG_PROJECT_ID",
				"NEXT_PUBLIC_POSTHOG_HOST"
			]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"dev:fe": {
			"persistent": true,
			"cache": false
		},
		"test": { "env": ["DATABASE_URL"] },
		"test:unit": {},
		"test:integration": { "env": ["DATABASE_URL"] },
		"test:e2e": {},
		"lint": {},
		"format": {},
		"migrate": {
			"env": ["DATABASE_URL"]
		}
	}
}
